{
  "name": "react-native-linear-gradient-text",
  "version": "0.3.1",
  "description": "Component to display text with linear gradient.",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --skipLibCheck --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn install && yarn example"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "linear-gradient",
    "gradient",
    "text",
    "text-gradient",
    "text-gradient-color"
  ],
  "repository": "https://github.com/HMDarkFir3/react-native-linear-gradient-text",
  "author": "hmdarkfir3 (https://github.com/HMDarkFir3)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HMDarkFir3/react-native-linear-gradient-text/issues"
  },
  "homepage": "https://github.com/HMDarkFir3/react-native-linear-gradient-text#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@react-native-community/eslint-config": "^2.0.0",
    "@release-it/conventional-changelog": "^2.0.0",
    "@types/jest": "^26.0.0",
    "@types/react-dom": "^18.0.5",
    "@types/react": "17.0.2",
    "@types/react-native": "^0.67.7",
    "commitlint": "^11.0.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^6.0.0",
    "jest": "^26.0.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.0.5",
    "react": "~16.9.0",
    "react-native": "^0.62.2",
    "react-native-builder-bob": "^0.18.2",
    "release-it": "^14.2.2",
    "typescript": "^4.2.4",
    "@react-native-masked-view/masked-view": "^0.2.6",
    "react-native-linear-gradient": "^2.5.6"
  },
  "peerDependencies": {
    "@react-native-masked-view/masked-view": "^0.2.1",
    "react": "*",
    "react-native": "*",
    "react-native-linear-gradient": "^2.5.1"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
